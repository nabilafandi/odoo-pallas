<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Midtrans Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group invisible="code != 'midtrans'">
                    <field name="midtrans_email_account"/>
                    <field name="midtrans_merchant_id"/>
                    <field name="midtrans_client_key" string="Client Key" password="True"/>
                    <field name="midtrans_server_key" string="Server Key" password="True"/>
                </group>
            </group>
        </field>
    </record>

</odoo>
